<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.telebroad.teleconsole.ContactFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        app:layoutManager="LinearLayoutManager"
        android:background="@android:color/transparent"
        tools:context="com.telebroad.teleconsole.controller.dashboard.ContactFragment"
        tools:listitem="@layout/item_contact" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_contact_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:elevation="8dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_anchor="@+id/list"
        app:layout_anchorGravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/add_a_contact"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:maxImageSize="24dp" /> <!-- You can adjust this value as per your need -->


